# Use the file name mbox-short.txt as the file name
fname = input("Enter file name: ")
fh = open(fname)
count = 0
total = 0
for line in fh:
    if line.startswith('X-DSPAM-Confidence:'):
        required_line = line
        find_space = required_line.find(' ')
        required_val = float(required_line[find_space+1:])
        total = total + required_val
        count = count + 1
print('Average spam confidence:',total/count)
